<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/black" />

    <TextView
        android:id="@+id/tv_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_item_uuid"
        tools:text="ID" />

    <TextView
        android:id="@+id/tv_item_uuid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item"
        app:layout_constraintTop_toBottomOf="@id/tv_item_id"
        app:layout_constraintBottom_toTopOf="@id/tv_item_name"
        tools:text="UUID" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item"
        app:layout_constraintTop_toBottomOf="@id/tv_item_uuid"
        app:layout_constraintBottom_toTopOf="@id/tv_item_price"
        tools:text="name" />

    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item"
        app:layout_constraintTop_toBottomOf="@id/tv_item_name"
        app:layout_constraintBottom_toTopOf="@id/tv_item_quantity"
        tools:text="price" />

    <TextView
        android:id="@+id/tv_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item"
        app:layout_constraintTop_toBottomOf="@id/tv_item_price"
        app:layout_constraintBottom_toTopOf="@id/tv_item_description"
        tools:text="quantity" />

    <TextView
        android:id="@+id/tv_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_item"
        app:layout_constraintTop_toBottomOf="@id/tv_item_quantity"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="price" />



</androidx.constraintlayout.widget.ConstraintLayout>